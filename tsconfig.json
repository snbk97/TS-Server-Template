{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@models/*": ["./models/*"],
            "@services/*": ["./services/*"],
            "@controllers/*": ["./controllers/*"],
            "@common/*": ["./common/*"],
        },
        "forceConsistentCasingInFileNames": true ,
        "experimentalDecorators": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
        }
    }
}